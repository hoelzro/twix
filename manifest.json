{
    "manifest_version": 2,
    "name": "Rob's Annotator",
    "version": "0.1",
    "permissions": [
      "downloads",
      "menus",
      "notifications",
      "storage",
      "tabs"
    ],
    "background": {
        "type": "module",
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    }],
    "options_ui": {
      "page": "options.html"
    }
}
